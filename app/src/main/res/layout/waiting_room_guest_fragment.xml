<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.qscqlmpa.dwitch.ui.ongoinggame.waitingroom.WaitingRoomActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/communicationStateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/regular_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Connected to host" />

        <Button
            android:id="@+id/reconnectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reconnect_btn"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/communicationStateTv"
            app:layout_constraintTop_toBottomOf="@+id/communicationStateTv"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/reconnectPb"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/reconnectBtn"
            app:layout_constraintStart_toEndOf="@+id/reconnectBtn"
            app:layout_constraintTop_toTopOf="@+id/reconnectBtn" />

        <Button
            android:id="@+id/leaveGameBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_game_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/localPlayerReadyCkb" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/localPlayerReadyCkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:checked="false"
            android:text="@string/ready"
            android:textSize="@dimen/regular_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>