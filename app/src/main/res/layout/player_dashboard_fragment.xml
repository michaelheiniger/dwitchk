<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ongoinggame.gameroom.playerdashboard.PlayerDashboardFragment">

    <TextView
        android:id="@+id/playersInfoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/regular_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Player1 (P) Player2 (A)" />

    <TextView
        android:id="@+id/dwitchEventTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/regular_text_size"
        app:layout_constraintEnd_toEndOf="@+id/lastCardPlayedIv"
        app:layout_constraintStart_toStartOf="@+id/lastCardPlayedIv"
        app:layout_constraintBottom_toTopOf="@+id/lastCardPlayedIv"
        tools:text="Dwitch event" />

    <ImageView
        android:id="@+id/lastCardPlayedIv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="@string/card"
        android:maxWidth="90dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playersInfoTv"
        tools:src="@drawable/spades_ace" />

    <TextView
        android:id="@+id/gameInfoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/regular_text_size"
        app:layout_constraintEnd_toEndOf="@+id/lastCardPlayedIv"
        app:layout_constraintStart_toStartOf="@+id/lastCardPlayedIv"
        app:layout_constraintTop_toBottomOf="@+id/lastCardPlayedIv"
        tools:text="Game event" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <Button
        android:id="@+id/startNewRoundBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pdf_start_new_round"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />

    <Button
        android:id="@+id/pickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pdf_pick_a_card"
        app:layout_constraintBottom_toBottomOf="@+id/startNewRoundBtn"
        app:layout_constraintEnd_toStartOf="@+id/passBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/startNewRoundBtn"
        app:layout_constraintTop_toTopOf="@+id/startNewRoundBtn" />

    <Button
        android:id="@+id/passBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pdf_pass"
        app:layout_constraintBottom_toBottomOf="@+id/pickBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pickBtn"
        app:layout_constraintTop_toTopOf="@+id/pickBtn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardsInHandRw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickBtn"
        tools:listitem="@layout/card_item" />

</androidx.constraintlayout.widget.ConstraintLayout>