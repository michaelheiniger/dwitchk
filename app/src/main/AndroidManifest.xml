<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.qscqlmpa.dwitch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".app.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dwitch">
        <activity
            android:name=".ui.home.main.MainActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.home.hostnewgame.HostNewGameActivity" />
        <activity android:name=".ui.home.joinnewgame.JoinNewGameActivity" />
        <activity android:name=".ui.ongoinggame.waitingroom.WaitingRoomActivity" />
        <activity android:name=".ui.ongoinggame.gameroom.GameRoomActivity" />

        <service
            android:name=".ongoinggame.services.HostInGameService"
            android:enabled="true" />
        <service
            android:name=".ongoinggame.services.GuestInGameService"
            android:enabled="true" />
    </application>

</manifest>